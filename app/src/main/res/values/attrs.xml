<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="smart_ui_enable_pull_down" format="boolean"/>
    <attr name="smart_ui_enable_pull_up" format="boolean"/>
    <attr name="smart_ui_background" format="color|reference"/>

    <declare-styleable name="MyItemView">
        <attr name="my_item_icon" format="reference"/>
        <attr name="my_item_content" format="string"/>
        <attr name="my_item_des" format="string"/>
        <attr name="my_item_show_right" format="boolean"/>
        <attr name="my_item_show_line" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="SmartPullableLayout">
        <attr name="smart_ui_enable_pull_down"/>
        <attr name="smart_ui_enable_pull_up"/>
        <attr name="smart_ui_background"/>
    </declare-styleable>

    <declare-styleable name="WaitingDots">
        <attr name="dotsColor" format="color"/>
        <attr name="period" format="integer"/>
        <attr name="jumpHeight" format="integer"/>
        <attr name="autoPlay" format="boolean"/>
    </declare-styleable>
</resources>